<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#38953B"
                android:text="CARD VIEW DESIGN"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:padding="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#4CAF50"
                android:padding="25dp"
                android:layout_weight="1">
                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/cardview"
                    android:layout_marginEnd="10dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="20dp"
                    android:layout_weight="0.5">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableTop="@drawable/home"
                        android:layout_marginTop="25dp"
                        android:text="HOME"
                        android:textAlignment="center"
                        android:textSize="16dp"
                        android:textStyle="bold"/>
                </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/cardview1"
                        android:layout_marginEnd="10dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="20dp"
                        android:layout_weight=".5">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="25dp"
                            android:text="LANGUAGE"
                            android:textAlignment="center"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            app:drawableTopCompat="@drawable/language1" />
                    </androidx.cardview.widget.CardView>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#4CAF50"
                android:padding="25dp"
                android:layout_weight="1">
                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/cardview"
                    android:layout_marginEnd="10dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="20dp"
                    android:layout_weight="0.5">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableTop="@drawable/baseline_chat_bubble_24"
                        android:layout_marginTop="25dp"
                        android:text="CHAT"
                        android:textAlignment="center"
                        android:textSize="16dp"
                        android:textStyle="bold"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/cardview1"
                    android:layout_marginEnd="10dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="20dp"
                    android:layout_weight=".5">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:text="CALENDER"
                        android:textAlignment="center"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        app:drawableTopCompat="@drawable/baseline_calendar_month_24" />
                </androidx.cardview.widget.CardView>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="183dp"
                android:layout_weight="1"
                android:background="#4CAF50"
                android:orientation="horizontal"
                android:padding="25dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/cardview"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:drawableTop="@drawable/baseline_widgets_24"
                        android:text="WIDGETS"
                        android:textAlignment="center"
                        android:textSize="16dp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight=".5"
                    android:background="@drawable/cardview1"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:text="INFO"
                        android:textAlignment="center"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        app:drawableTopCompat="@drawable/baseline_info_24" />
                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </LinearLayout>



    </LinearLayout>


</LinearLayout>